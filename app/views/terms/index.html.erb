<h1><%= link_to("MeSH #{@book.title} ", book_path(@book)) if @book %>Terms</h1>
<%= alphabetical_query_list @q %>
<%= page_entries_info @terms %>
<table>
  <tr>
    <th>Term</th>
    <th>Years</th>
  </tr>

<% for term in @terms %>
  <tr>
    <td>
      <%= link_to(term.term, book_term_path(@book, term)) if @book %>
      <%= link_to(term.term, term_path(term)) unless @book %></td>
    <td><%= term.books_count %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @term %>
